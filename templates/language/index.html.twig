{% extends 'base.html.twig' %}

{% block title %}dev-apps\technos{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <h1 class="main-title ml-4 mt-4">
            Technos
            <a class="btn-sm btn bck-mustard" href="{{ path('language_new') }}">
                <i class="fa fa-plus"></i>
            </a>
        </h1>
    </div>
    <table class="table text-white mt-5">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Image</th>
                <th><i class="fa fa-edit"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for language in languages|reverse %}
            <tr>
                <td>{{ language.name }}</td>
                <td>
                    <img class="img-project" src="{{ language.image }}" alt="Image de {{ language.name }}">
                </td>
                <td>
                    <a class="link-edit" href="{{ path('language_edit', {'id': language.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune techno trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
