<form method="post" action="{{ path('language_delete', {'id': language.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette techno ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ language.id) }}">
    <button class="btn bck-red text-white float-right mr-3 mt-4"><i class="fa fa-trash"></i></button>
</form>
