<div class="accordion ml-4 mr-4" id="accordionProject">
    {% for project in projects|reverse %}
    <div class="card">
        <div class="card-header" id="heading-{{ project.id }}">
            <h2 class="mb-0">
                <button class="btn btn-block text-left txt-shadow card-title d-flex align-items-center" type="button" data-toggle="collapse" data-target="#collapse-{{ project.id }}" aria-expanded="false" aria-controls="collapse-{{ project.id }}">
                    <img class="img-project mr-4" src="{{ asset('images/projects/'~project.image) }}" alt="Image of {{ project.title }}">
                    {{ project.title }}
                </button>
            </h2>
        </div>
        <div id="collapse-{{ project.id }}" class="collapse" aria-labelledby="heading-{{ project.id }}" data-parent="#accordionProject">
            <div class="card-body bck-black">
                <div class="row">
                    <div class="col-8">
                        <div>
                            {{ project.description }}
                        </div>
                    </div>
                    <div class="col-4 border-left pl-0">
                        <div class="top-card d-flex justify-content-center align-items-center bck-grey-dark">
                            <p class="p-0 m-0 txt-shadow">{{ project.title|upper }}</p>
                        </div>
                        {% for language in project.languages %}
                        <img class="collapse-img-language ml-3 mt-3" src="{{ asset('images/languages/'~language.image) }}" alt="Image of {{ language.name }}">
                        {% endfor %}
                        <p class="mt-4 ml-4">$client = '{{ project.client }}'</p>
                        <p class="ml-4 mb-0">$this-><a class="card-link" href="{{ project.link }}" target="_blank">getProject</a>()</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
