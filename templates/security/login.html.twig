{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center login-surcontainer">
        <div class="login-container rounded shadow-sm">
            <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">se déconnecter</a>
                </div>
                {% endif %}

                <h1 class="main-title text-center txt-shadow">Connexion</h1>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mt-4" placeholder="Pseudo" required autofocus>
                <input type="password" name="password" id="inputPassword" class="form-control mt-4" placeholder="Mot de passe" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mt-3">
                    <label>
                        <input class="mr-1" type="checkbox" name="_remember_me"> $rememberMe = true
                    </label>
                </div>

                <button class="btn login-btn mt-4 float-right text-white txt-shadow" type="submit">
                    is_valid ?
                </button>
            </form>
        </div>
    </div>
{% endblock %}
