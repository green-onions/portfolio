{% extends 'base.html.twig' %}

{% block title %}dev-apps\mes-projets{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <h1 class="main-title ml-4 mt-4">
            Mes projets
            <a class="btn-sm btn bck-mustard" href="{{ path('project_new') }}">
                <i class="fa fa-plus"></i>
            </a>
        </h1>
    </div>
    <div class="d-flex">
        {% for project in projects %}
            <div class="card-show-container rounded mt-5 ml-3">
                <div class="bck-black text-white d-flex justify-content-between p-2 rounded-top">
                    <p class="m-0 main-title">{{ project.title }}</p>
                    <a class="link-edit" href="{{ path('project_edit', {'id': project.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                </div>
                <div class="d-flex justify-content-center align-items-center p-3 rounded-bottom">
                    <img class="card-show-img" src="{{ asset('images/projects/'~project.image) }}" alt="Image de {{ project.title }}">
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
