{{ form_start(form) }}
<div class="margin-18">
    <p class="color-black mb-2 mt-2">{{ form.name.vars.label }}</p>
    {{ form_widget(form.name) }}
    <p class="color-black mb-2 mt-2">{{ form.image.vars.label }}</p>
    {{ form_widget(form.image) }}
