{% extends 'base.html.twig' %}

{% block title %}dev-apps\technos{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <h1 class="main-title ml-4 mt-4">
            Technos
            <a class="btn-sm btn bck-grey-light" href="{{ path('language_new') }}">
                <i class="fa fa-plus"></i>
            </a>
        </h1>
    </div>
    <div class="d-flex">
        {% for language in languages %}
        <div class="card-show-container rounded mt-5 ml-3">
            <div class="bck-black text-white d-flex justify-content-between p-2 rounded-top">
                <p class="m-0 main-title">{{ language.name }}</p>
                <a class="link-edit" href="{{ path('language_edit', {'id': language.id}) }}">
                    <i class="fa fa-edit"></i>
                </a>
            </div>
            <div class="d-flex justify-content-center align-items-center p-3 rounded-bottom">
                <img class="card-show-img" src="{{ asset('images/languages/'~language.image) }}" alt="Image de {{ language.name }}">
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
