{{ form_start(form) }}
<div class="d-flex justify-content-between">
    {{ form_widget(form.name, {'attr': {'placeholder': 'Votre nom'}}) }}
    {{ form_widget(form.mail, {'attr': {'placeholder': 'Votre mail'}}) }}
</div>
<div class="mt-3 mb-2">
    {{ form_widget(form.message, {'attr': {'placeholder': 'Votre message'}}) }}
</div>
